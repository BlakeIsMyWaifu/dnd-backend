{
	"root": true,
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": "latest"
	},
	"extends": [
		"eslint:recommended"
	],
	"env": {
		"node": true
	},
	"rules": {
		"indent": [
			"warn",
			"tab"
		],
		"quotes": [
			"warn",
			"single"
		],
		"jsx-quotes": [
			"warn",
			"prefer-single"
		],
		"semi": [
			"warn",
			"never"
		],
		"comma-dangle": [
			"warn",
			"never"
		],
		"prefer-const": "warn",
		"arrow-parens": [
			"warn",
			"as-needed"
		],
		"no-multiple-empty-lines": [
			"warn",
			{
				"max": 1,
				"maxEOF": 0,
				"maxBOF": 0
			}
		],
		"object-curly-spacing": [
			"warn",
			"always"
		],
		"no-trailing-spaces": "warn"
	}
}